<Window x:Class="ELMS_Group1.AdminLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ELMS_Group1.window"
        mc:Ignorable="d"
        Title="Admin Portal" Height="380" Width="350" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        
        <DropShadowEffect x:Key="DropShadowEffect" BlurRadius="10" 
                          ShadowDepth="2" Opacity="0.1" Color="#000000"/>

        <Style x:Key="TextButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#007ACC"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}" 
                                   Foreground="{TemplateBinding Foreground}"
                                   TextDecorations="Underline"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="10" Background="White" 
            BorderThickness="1" BorderBrush="#E0E0E0"
            Effect="{StaticResource DropShadowEffect}">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

      
            <Grid Grid.Row="0">
                <TextBlock Text="ADMIN PORTAL" FontSize="18" FontWeight="Bold" 
                           Foreground="#2E7D32" HorizontalAlignment="Center"/>
                <Button x:Name="CloseButton" Content="✕" HorizontalAlignment="Right" 
                        Width="25" Height="25" Background="Transparent" 
                        BorderThickness="0" Foreground="#616161"
                        Click="CloseButton_Click"/>
            </Grid>

            <TextBlock Text="Welcome back" Grid.Row="1" FontSize="14" 
                       Foreground="#616161" Margin="0,15,0,25" HorizontalAlignment="Center"/>

 
            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <TextBlock Text="Email" FontWeight="Medium" Margin="0,0,0,5" Foreground="#424242"/>
                <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Background="#FAFAFA">
                    <TextBox x:Name="EmailTextbox" Height="38" Padding="10,0"
                             BorderThickness="0" FontSize="14" Background="Transparent"/>
                </Border>
            </StackPanel>


            <StackPanel Grid.Row="3" Margin="0,0,0,20">
                <TextBlock Text="Password" FontWeight="Medium" Margin="0,0,0,5" Foreground="#424242"/>
                <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Background="#FAFAFA">
                    <PasswordBox x:Name="PasswordBox" Height="38" Padding="10,0"
                                 BorderThickness="0" FontSize="14" Background="Transparent"/>
                </Border>
            </StackPanel>

    
            <Border Grid.Row="4" CornerRadius="4" Background="#007ACC">
                <Button Content="LOGIN" Height="40" 
                        HorizontalAlignment="Stretch" Click="Login_Click"
                        Background="Transparent" Foreground="White" 
                        FontWeight="SemiBold" BorderThickness="0"
                        FontSize="14"/>
            </Border>

      
            <TextBlock x:Name="ErrorTextBlock" Grid.Row="5" Foreground="#D32F2F" 
                       TextAlignment="Center" Visibility="Collapsed" Margin="0,10"/>

            <StackPanel Grid.Row="6" Orientation="Horizontal" 
                        HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,15">
                <TextBlock Text="Don't have an account?" VerticalAlignment="Center" Foreground="#616161"/>
                <Button Content="Register" Click="Register_Click"
                        Style="{StaticResource TextButtonStyle}"
                        Foreground="#2E7D32" FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
