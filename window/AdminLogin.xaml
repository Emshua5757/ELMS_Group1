<Window x:Class="ELMS_Group1.AdminLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ELMS_Group1.window"
        mc:Ignorable="d"
                        Title="Admin Login"
        Height="450" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="#40000000"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT SIDE - Login Panel -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="40">
                <TextBlock Text="ADMIN PORTAL" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Margin="0,0,0,30"
                           Foreground="#007ACC"/>

                <!-- Email Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Admin Email" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"
                               Foreground="#424242"/>
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" Background="#FAFAFA">
                        <TextBox x:Name="EmailTextbox" 
                                 Height="40" 
                                 Padding="10"
                                 FontSize="14"
                                 BorderThickness="0"
                                 Background="Transparent"/>
                    </Border>
                </StackPanel>

                <!-- Password Field -->
                <StackPanel Margin="0,0,0,30">
                    <TextBlock Text="Password" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"
                               Foreground="#424242"/>
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" Background="#FAFAFA">
                        <PasswordBox x:Name="PasswordBox" 
                                     Height="40" 
                                     Padding="10"
                                     FontSize="14"
                                     BorderThickness="0"
                                     Background="Transparent"/>
                    </Border>
                </StackPanel>

                <!-- Login Button -->
                <Button Height="45" 
                        Background="#007ACC"
                        Foreground="White"
                        FontWeight="SemiBold"
                        FontSize="14"
                        BorderThickness="0"
                        Click="Login_Click"
                        Cursor="Hand">
                    <TextBlock Text="LOGIN"/>
                </Button>

                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                    <TextBlock Text="Don't have an account?" 
               Foreground="#546E7A"/>
                    <Button Content="Register" 
                            Margin="5,0,0,0"
                            Foreground="#2C3E50"
                            Background="Transparent"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="Register_Click"/>
                </StackPanel>

                
            </StackPanel>

            <!-- RIGHT SIDE - Graphics Panel -->
            <Border Grid.Column="1" Background="#2C3E50" MouseLeftButtonDown="Window_MouseLeftButtonDown">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Viewbox Width="120" Height="120" Margin="0,0,0,20">
                        <Path Data="M12,3L2,12H5V20H19V12H22L12,3Z" 
                              Fill="White" Stretch="Uniform"/>
                    </Viewbox>
                    <TextBlock Text="ADMINISTRATOR ACCESS" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="20"/>
                    <TextBlock Text="Restricted system controls" 
                               Foreground="#B0BEC5" 
                               FontSize="14"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Custom Title Bar Controls -->
            <Grid Grid.ColumnSpan="2"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Top"
                  Margin="0,10,10,0"
                  Width="70"
                  Height="30"
                  Panel.ZIndex="999">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Minimize Button -->
                <Button Grid.Column="0"
                        x:Name="MinimizeButton"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="White"
                        FontSize="12"
                        Click="MinimizeButton_Click"
                        Cursor="Hand">
                    <TextBlock Text="━" VerticalAlignment="Center" TextAlignment="Center"/>
                </Button>

                <!-- Close Button -->
                <Button Grid.Column="1"
                        x:Name="CloseButton"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="White"
                        FontSize="12"
                        Click="CloseButton_Click"
                        Cursor="Hand">
                    <TextBlock Text="✕" VerticalAlignment="Center" TextAlignment="Center"/>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
