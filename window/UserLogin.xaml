<Window x:Class="ELMS_Group1.window.UserLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Library Management System - Login"
        Height="450" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="White" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="#40000000"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#2C3E50" CornerRadius="10,0,0,10">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="/Assets/library-icon.png" Width="120" Height="120" Margin="0,0,0,20"/>
                    <TextBlock Text="LIBRARY MANAGEMENT SYSTEM" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="20"/>
                    <TextBlock Text="Sign in to continue" 
                               Foreground="#B0BEC5" 
                               FontSize="14"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>


            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="40">
                <TextBlock Text="Welcome Back" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Margin="0,0,0,30"
                           Foreground="#2C3E50"/>

                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Name or Email" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"
                               Foreground="#546E7A"/>
                    <Border BorderBrush="#B0BEC5" BorderThickness="1" CornerRadius="4">
                        <TextBox x:Name="UsernameTextBox" 
                                 Height="40" 
                                 Padding="10"
                                 FontSize="14"
                                 BorderThickness="0"
                                 Background="Transparent"/>
                    </Border>
                </StackPanel>


                <StackPanel Margin="0,0,0,30">
                    <TextBlock Text="Password" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"
                               Foreground="#546E7A"/>
                    <Border BorderBrush="#B0BEC5" BorderThickness="1" CornerRadius="4">
                        <PasswordBox x:Name="PasswordBox" 
                                     Height="40" 
                                     Padding="10"
                                     FontSize="14"
                                     BorderThickness="0"
                                     Background="Transparent"/>
                    </Border>
                </StackPanel>

                <Button Content="LOGIN" 
                        Height="45" 
                        Background="#2C3E50" 
                        Foreground="White"
                        FontWeight="SemiBold"
                        FontSize="14"
                        BorderThickness="0"
                        Click="Login_Click"
                        Cursor="Hand"/>

         
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                    <TextBlock Text="Don't have an account?" 
                               Foreground="#546E7A"/>
                    <Button Content="Register" 
                            Margin="5,0,0,0"
                            Foreground="#2C3E50"
                            Background="Transparent"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="Register_Click"/>
                </StackPanel>
            </StackPanel>

           
            <Button x:Name="CloseButton" 
                    Content="✕" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"
                    Width="30" 
                    Height="30"
                    Background="Transparent" 
                    BorderThickness="0" 
                    Foreground="#546E7A"
                    FontSize="14"
                    Click="CloseButton_Click" Grid.Column="1"/>
        </Grid>
    </Border>
</Window>